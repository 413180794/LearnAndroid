<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slideconflict.SlideFragment">

   <com.example.learnandroid.slideconflict.MyScollView
       android:id="@+id/scroll_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/scroll_view_layout"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/text_view_head"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <com.example.learnandroid.slideconflict.MyListView
               android:id="@+id/list_view"
               android:layout_width="match_parent"
               android:layout_height="500dp"/>
           <com.example.learnandroid.slideconflict.MyRecyclerView
               android:id="@+id/recycler_view"
               android:layout_width="match_parent"
               android:layout_height="500dp"/>
           <TextView
                android:id="@+id/text_view_foot"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>

   </com.example.learnandroid.slideconflict.MyScollView>

</FrameLayout>